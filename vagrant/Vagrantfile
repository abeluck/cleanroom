# As we need a monkey-patched Vagrant, we need to disable direct usage
if $PROGRAM_NAME.end_with? 'vagrant'
  STDERR.puts <<-END_OF_MESSAGE.gsub(/^    /, '')
    This Vagrantfile is not meant to be used directly with `vagrant`, but
    through `rake`, using the Rakefile that is present in the root of Tails
    repository.
  END_OF_MESSAGE
  exit 1
end

Vagrant::Config.run do |config|
  config.vm.box = 'tails'

  config.vm.box_url = 'http://dl.amnesia.boum.org/tails/project/vagrant/squeeze.box'
  config.vm.box_checksum = 'ffb3f68f55a3458e007b9abed3eac057f71c518713fcdf982b78f8b59e28318e'

  config.vm.provision :shell, :path => 'provision/setup-tails-builder'

  config.vm.share_folder 'amnesia', '/amnesia.git', '../.git'
end
